#/bin/bash
HOST=$1
echo $HOST
mkdir -p ./tmp
#openssl s_client -connect $HOST -ign_eof |tee ./tmp/log 
start=`grep -n 'BEGIN CERTIFICATE' ./tmp/log |awk -F ':' '{print $1}'`
end=`grep -n 'END CERTIFICATE' ./tmp/log |awk -F ':' '{print $1}'`
sed -n ${start},${end}p ./log > ./tmp/${HOST}.pem

mkdir -p ./tmp/files

